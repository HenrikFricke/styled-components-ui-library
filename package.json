{
  "name": "styled-components-ui-library",
  "version": "1.0.0",
  "scripts": {
    "start": "yarn run storybook",
    "build:lib": "tsc",
    "build:storybook": "build-storybook",
    "test": "yarn lint && jest --coverage",
    "lint": "yarn run lint:ts && yarn run lint:styling",
    "lint:ts": "tslint src/**/*.tsx",
    "lint:styling": "stylelint src/components/**/*.tsx",
    "precommit": "yarn test",
    "prepush": "yarn test && yarn prod:build",
    "storybook": "start-storybook -p 6006"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": ".*\\.test\\.(ts|tsx)$"
  },
  "author": "Henrik Fricke <henrik.fricke@jimdo.com>",
  "license": "MIT",
  "devDependencies": {
    "@storybook/cli": "^3.0.1",
    "@storybook/react": "^3.0.1",
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.28",
    "@types/react": "^15.0.27",
    "@types/react-dom": "^15.5.0",
    "@types/react-test-renderer": "^15.5.0",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "jest-styled-components": "^3.0.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1",
    "source-map-support": "^0.4.14",
    "styled-components": "^2.0.1",
    "stylelint": "^7.11.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-processor-styled-components": "^0.1.2",
    "stylelint-webpack-plugin": "^0.7.1",
    "ts-jest": "^19.0.10",
    "ts-loader": "^2.1.0",
    "tslint": "^5.1.0",
    "tslint-react": "^3.0.0",
    "typescript": "^2.2.2"
  }
}
